{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
     "jsx": "react-native",
    "module": "NodeNext",
    "strict": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.jsx",
    "app/_layout.jsx",
    "nativewind-env.d.js",
    "nativewind-env.d.ts"
  ]
}